<div class="card">
  <div class="card-header">
    <h2>Login</h2>
  </div>
  <form id="login-form" class="card-body">
    <div>
      <label for="username-input-login">Username</label>
      <input class="mb-1" type="text" id="username-input-login" />
    </div>
    <div>
      <label for="password-input-login" class="form-label">Password</label>
      <input class="mt-1" type="password" id="password-input-login" />
    </div>
    <button type="submit" id="login-btn" class="btn btn-success mt-2">Login!</button>
    <button type="button" class="btn btn-secondary mt-2">
      <a class="text-light text-decoration-none"href="/signup">Sign Up</a>
    </button>
  </form>
</div>

<script src="/js/login.js"></script>
